@model IEnumerable<VSAS.Models.VehicleDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" id="createNew">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>VehicleRegNumber</th>
            <th>ChassisNumber</th>
            <th>EngineNumber </th>
            <th> Make</th>
            <th> MakeMonthYear</th>
            <th>PurchaseDate</th>
            <th>CurrentOdometerReading  </th>
            <th>CreatedDate </th>
            <th>UpdatedDate</th>
            <th>UserDetail</th>
            <th>Action </th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="11" align="center"></td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.VehicleRegNumber</td>
                    <td>@item.ChassisNumber</td>
                    <td>@item.EngineNumber</td>
                    <td>@item.Make</td>
                    <td>@item.MakeMonthYear</td>
                    <td>@item.PurchaseDate</td>
                    <td>@item.CurrentOdometerReading </td>
                    <td>@item.CreatedDate </td>
                    <td>@item.UpdatedDate </td>
                    <td>@item.UserDetail.ContactNumber </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.VehicleId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.VehicleId">Details</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
