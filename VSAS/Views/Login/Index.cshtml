@model VSAS.Models.Registration

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string errorMessage = ViewBag.errorMessage;
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-success">Login</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Index">
                        <div class="form-group">
                            <label asp-for="EmailId" class="control-label">Email Id</label>
                            <input asp-for="EmailId" type="text" id="emailId" class="form-control" />
                            <span asp-validation-for="EmailId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="PassCode" class="control-label">Password</label>
                            <input type="password" asp-for="PassCode" id="password" class="form-control" />
                            <span asp-validation-for="PassCode" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <div id="errorMessage">@errorMessage</div>
                        </div>
                       
                        <div class="form-group">
                            <button class="btn btn-primary" id="login">Login</button>
                        </div>
                        <a href="/Registration/Create" id="register">Register</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>